<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7D6D6">
    <RelativeLayout
        android:id="@+id/top_card"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/head_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/chaiquan2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YXX"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_toRightOf="@id/head_icon"
            android:layout_marginTop="41dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信号：123456"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#888787"
            android:layout_toRightOf="@id/head_icon"
            android:layout_marginTop="71dp"
            android:layout_marginLeft="20dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/pay_way"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/top_card"
        android:background="@color/white"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/pay_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/pay"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/pay_image"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/pay_way"
        android:background="@color/white"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/setting_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/settings"
            android:layout_marginLeft="22dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/setting_image"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</RelativeLayout>